# AudioAlchemist 本地开发环境配置
# 复制此文件为 .env 并根据需要修改

# 应用基础配置
PROJECT_NAME="AudioAlchemist"
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8080","http://127.0.0.1:8080"]
SECRET_KEY="your-secret-key-change-this-in-production"

# 数据库配置 (本地开发使用SQLite)
DATABASE_URL="sqlite:///./audioalchemist.db"

# Redis配置 (本地开发)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# Celery配置
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# 日志配置
LOG_LEVEL="DEBUG"
LOG_FORMAT="console"

# 文件上传配置
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=100
ALLOWED_EXTENSIONS=["mp3", "wav", "m4a", "flac", "ogg"]

# WhisperX配置
WHISPERX_MODEL="base"
WHISPERX_DEVICE="cpu"
WHISPERX_COMPUTE_TYPE="int8"

# 开发模式
DEBUG=true
ENVIRONMENT="development"

# API配置
API_V1_STR="/api/v1"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 邮件配置 (开发环境可选)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=""
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL=""
EMAILS_FROM_NAME=""

# 安全配置
FIRST_SUPERUSER="admin@audioalchemist.local"
FIRST_SUPERUSER_PASSWORD="changethis"

# 测试配置
TEST_DATABASE_URL="sqlite:///./test_audioalchemist.db"
